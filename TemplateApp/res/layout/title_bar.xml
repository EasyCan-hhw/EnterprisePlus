<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   	android:layout_height="@dimen/dp_45"
   	android:background="#00ac6c"
    android:orientation="horizontal" >
    
    <RelativeLayout 
        android:id="@+id/titleBar_lift_Relative"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        >
        <TextView 
            android:id="@+id/titleBar_lift_textView"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:textSize="@dimen/dp_20"
	        android:textColor="#ffffff"
	        android:text="商城"
	        android:gravity="center"
	        />
        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/serch_layout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        >
        
       <TextView 
           android:id="@+id/serch_image"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginRight="@dimen/dp_15"
           android:background="@drawable/title_bar_serch_shape"
           />
       <LinearLayout 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_centerInParent="true"
           >
             <TextView
	           android:id="@+id/serch_text"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:background="@drawable/search"
	           />
	       <TextView 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="@dimen/dp_15" 	
	           android:textColor="#ffffff"
	           android:text="搜索问题"
	           />
       </LinearLayout>
     
        
    </RelativeLayout>

</LinearLayout>
